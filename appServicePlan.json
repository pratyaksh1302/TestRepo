{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workloadName": {
            "type": "string",
            "metadata": {
                "description": "The short name of the workload"
            },
            "defaultValue": "ocs"
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Short abbreveation of the environment stage: lab, dev, test, stage, etc."
            },
            "defaultValue": "lab2"
        },
        "region": {
            "type": "string",
            "metadata": {
                "description": "Abbreveation of the location where the resource will be deployed. Will be used only for naming purposes. E.g. westeu,northeu"
            },
            "defaultValue": "westeu"
        },
        "tier": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard",
                "Premium",
                "PremiumV2",
                "PremiumV3",
                "Isolated",
                "IsolatedV2"
            ],
            "metadata": {
                "description": "Premium, Standard, Free, etc."
            }
        },
        "skuName": {
            "type": "string",
            "metadata": {
                "description": "Exact sku name of the Tier. E.g. S1, P1V2, etc."
            },
            "defaultValue": "P1V2"
        },
        "capacity": {
            "type": "string",
            "metadata": {
                "description": "Current number of instances assigned to the resource"
            },
            "defaultValue": "1"
        },
        "kind": {
            "type": "string",
            "metadata": {
                "description": "The Kind of App service Plan app Window for OS, linux for Linux OS"
            },
            "allowedValues": [
                "app",
                "linux"
            ],
            "defaultValue": "app"
        },
        "purpose": {
            "type": "string",
            "metadata": {
                "description": "The purpose of the resource"
            },
            "defaultValue": "main"
        },
        "index": {
            "type": "string",
            "metadata": {
                "description": "Number of instance"
            },
            "defaultValue": "001"
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "A list of tags required by policy"
            },
            "defaultValue": {
                "Application Name": "OCCworks",
                "Business Criticality": "none",
                "Owner": "Francis Hardy",
                "Start date of project": "none",
                "Ticket Number": "0"
            }
        }
    },
    "variables": {
        "aspName": "[concat('asp-', parameters('purpose'), '-', parameters('workloadName'), parameters('environment'), '-',  parameters('region'), '-', parameters('index'))]",
        "aspID": "[resourceId('Microsoft.Web/serverfarms',variables('aspName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "name": "[variables('aspName')]",
            "apiVersion": "2018-02-01",
            "kind": "[parameters('kind')]",
            "properties": {
                "reserved": "[if(equals(parameters('kind'), 'linux'), true(), false())]",
                "isXenon": false
            },
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "[parameters('tier')]",
                "capacity": "[parameters('capacity')]"
            }
        }
    ],
    "outputs": {
        "aspName": {
            "type": "string",
            "value": "[variables('aspName')]"
        },
        "aspID": {
            "type": "string",
            "value": "[variables('aspID')]"
        },
        "aspWebSpace": {
            "type": "string",
            "value": "[reference(variables('aspName')).webSpace]"
        },
        "aspPurpose": {
            "type": "string",
            "value": "[parameters('purpose')]"
        }
    }
}
