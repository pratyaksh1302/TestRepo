{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workloadName": {
            "type": "string",
            "metadata": {
                "description": "The short name of workload"
            },
            "defaultValue": "ocs"
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "The short name of target environment"
            },
            "defaultValue": "lab1"
        },
        "region": {
            "type": "string",
            "metadata": {
                "description": "The short name of target region"
            },
            "defaultValue": "westeu"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Full name of Location to use in deployment."
            },
            "defaultValue": "[resourceGroup().location]"
        },
        "vnetRgName": {
            "type": "string",
            "metadata": {
                "description": "The name of resource group with network components"
            },
            "defaultValue": "rg-nw-ngpdevops-westeu-001"
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of DevOps vnet"
            },
            "defaultValue": "vnet-ngpdevops-westeu-001"
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of target subnet for private-endpoint"
            },
            "defaultValue": "snet-pe-ngpdevops-westeu-001"
        },
        "targetResourceName": {
            "type": "string",
            "metadata": {
                "description": "The name of target resource for private endpoint"
            },
            "defaultValue": "unset"
        },
        "targetResourceType": {
            "type": "string",
            "metadata": {
                "description": "The type of target resource for private endpoint, e.g. 'Microsoft.Storage/storageAccounts'"
            },
            "defaultValue": "unset"
        },
        "targetSubResourceType": {
            "type": "string",
            "metadata": {
                "description": "The type of target SUBresource for private endpoint, e.g. 'file'"
            },
            "defaultValue": "unset"
        },
        "targetResourceRG": {
            "type": "string",
            "metadata": {
                "description": "Resource Group where Target Resource exist"
            },
            "defaultValue": "unset"
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "A list of tags required by policy"
            },
            "defaultValue": {
                "Application Name": "OCCworks",
                "Business Criticality": "none",
                "Owner": "Francis Hardy",
                "Start date of project": "none",
                "Ticket Number": "0"
            }
        }
    },
    "variables": {
        "privateEndpointName": "[concat('pe-', parameters('targetSubResourceType'), '-', parameters('workloadName'), '-', parameters('environment'), '-', parameters('region'), '-', '001')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/privateEndpoints",
            "name": "[variables('privateEndpointName')]",
            "apiVersion": "2020-06-01",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "subnet": {
                    "id": "[resourceId(parameters('vnetRgName'),'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName'))]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('privateEndpointName')]",
                        "properties": {
                            "privateLinkServiceId": "[resourceId(parameters('targetResourceRG'),parameters('targetResourceType'), parameters('targetResourceName'))]",
                            "groupIds": [
                                "[parameters('targetSubResourceType')]"
                            ]
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "privateEndPointId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/privateEndpoints', variables('privateEndpointName'))]"
        },
        "privateEndPointName": {
            "type": "string",
            "value": "[variables('privateEndpointName')]"
        }
    }
}